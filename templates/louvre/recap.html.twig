{% extends 'base.html.twig' %}

{% block title %}Louvre!{% endblock %}

{% block body %}
    <div class="opicity_back">
        <!-- multistep form -->
        <div id="msform" >
            <!-- progressbar -->
            <ul id="progressbar">
                <li>Date</li>
                <li>Billets</li>
                <li>Email</li>
                <li class="active">Paiement</li>
            </ul>
            <!-- fieldsets -->
            <fieldset>
                <h2 class="fs-title">Recapitulatif</h2>
                <div id="sandbox-container" class="calendrier">
                    {% if reservation.demiJournee == 1 %}
                        <p>Vous souhaitez réserver pour la demi journée du {{ reservation.date|date('d-m-Y') }}</p>
                    {% elseif reservation.demiJournee == 0 %}
                        <p>Vous souhaitez réserver pour la journée entière du {{ reservation.date|date('d-m-Y') }}</p>
                    {% endif %}
                </div>

                <div class="demi_journee_form">
                    <p></p>
                </div>
                <button type="button" onclick="window.location.href='http://localhost:8000/louvre'" name="previous" class="previous action-button">retour</button>
            </fieldset>
        </div>
    </div>

{% endblock %}
    {% block javascripts %}

        {{ encore_entry_script_tags('app') }}

    {% endblock %}